# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    color_good = "#88FF99"
    color_degraded = "#FFFF88"
    color_bad = "#FF8888"
    interval = 5
}

#order += "ipv6"
order += "disk /"
order += "disk /home"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless wlp3s0"
#order += "ethernet _first_"
order += "battery_koil _first_"
order += "volume master"
order += "load"
order += "tztime local"
order += "time"

wireless wlp3s0 {
    #format_up = "W: (%quality at %essid) %ip"
    format_up = "  %essid %ip"
    format_down = "  down"
    on_click 1 = "exec killall -USR1 nm-applet"
    on_click 3 = "exec killall -USR2 nm-applet"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery_koil _first_ {
    format = "{}"
    mode = "koil"
}

volume master {
        format = " %volume"
        format_muted = "   %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        color_degraded = "#FF8888"
        on_click 1 = "exec pavucontrol" #i3-sensible-terminal -e alsamixer"
        on_click 2 = "exec amixer set Master toggle"
        on_click 3 = "exec killall pavucontrol"
        on_click 4 = "exec amixer set Master 1+ && killall -USR1 i3status"
        on_click 5 = "exec amixer set Master 1- &&  killall -USR1 i3status"
}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

tztime local {
    format = "  %a %Y-%m-%d"
}

time {
    format = "  %H:%M"
}

load {
    format = "  %1min"
}

disk "/" {
    format = "  %avail"
}

disk "/home" {
    format = "  %avail"
}


