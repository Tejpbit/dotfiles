[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bar1]
type = internal/i3
pin-workspaces = false
monitor = ${env:MONITOR:}
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
fixed-center = false
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

;border-size = 2
;border-color = ${colors.background}

padding-left = 0
padding-right = 3

module-margin-left = 1
module-margin-right = 3

font-0 = fixed:pixelsize=14;1
font-1 = unifont:fontformat=truetype:size=14:antialias=false;0
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=14;1"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=14;1"
font-4 = "Font Awesome 5 Brands:pixelsize=14;1"

modules-left = i3
modules-center = xwindow
modules-right = pomobar filesystem xbacklight volume wlan eth memory cpu battery wireless-network date

tray-position = left
tray-padding = 5
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/wireless-network]
type = internal/network
interface = wlp59s0

format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = %essid% %downspeed:9%
label-connected-foreground = #eee3ffd4

label-disconnected = not connected
label-disconnected-foreground = #66ffffff

ramp-signal-0 = üò±
ramp-signal-1 = üò†
ramp-signal-2 = üòí
ramp-signal-3 = üòä
ramp-signal-4 = üòÉ
ramp-signal-5 = üòà
ramp-signal-foreground = ${colors.foreground-alt}

