[module/pomobar]
type = custom/ipc
hook-0 = cat ~/.pomobaroutput
initial=1
click-left = pomobar.py --action=new -d 20 &
click-middle= pomobar.py --action=kill &
click-right = pomobar.py --action=break -d 20 &

